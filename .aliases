# **[SAFER]** Remove orphan packages
orphan() {
  local orphans
  orphans=$(pacman -Qtdq)
  if [[ -n "$orphans" ]]; then
    echo "The following orphan packages will be removed:"
    echo "$orphans"
    # shellcheck disable=SC2086
    sudo pacman -Rns $orphans
  else
    echo "No orphan packages to remove."
  fi
}
