# Improved updateall function with success/failure reporting
updateall() {
    echo "üîÑ Starting system update..."
    
    local distro
    if [ -f /etc/os-release ]; then
        distro=$(grep '^ID=' /etc/os-release | cut -d= -f2 | tr -d '"')
    else
        distro="unknown"
    fi

    # Create a function to handle execution and reporting
    run_update() {
        echo "üîπ Running: $*"
        if "$@"; then
            echo "‚úÖ Success: $1 update completed"
            return 0
        else
            echo "‚ùå Failed: $1 update failed"
            return 1
        fi
    }

    # Update package managers based on distribution
    echo "üì¶ Updating system packages..."
    case "$distro" in
        alpine)
            run_update sudo apk update && run_update sudo apk upgrade
            ;;
        debian|ubuntu)
            run_update sudo apt update && run_update sudo apt upgrade -y
            ;;
        fedora|rhel|centos)
            if command -v dnf >/dev/null 2>&1; then
                run_update sudo dnf upgrade --refresh -y
            else
                run_update sudo yum update -y
            fi
            ;;
        arch)
            run_update sudo pacman -Syu
            ;;
        *)
            # Default to pacman if distribution couldn't be identified
            command -v pacman >/dev/null 2>&1 && run_update sudo pacman -Syu
            ;;
    esac

    # Update other package managers if available
    command -v flatpak >/dev/null 2>&1 && echo "üì¶ Updating Flatpak packages..." && run_update flatpak update -y
    command -v snap >/dev/null 2>&1 && echo "üì¶ Updating Snap packages..." && run_update sudo snap refresh
    command -v brew >/dev/null 2>&1 && echo "üì¶ Updating Homebrew packages..." && run_update brew update && run_update brew upgrade
    
    # Update framework and tools
    command -v zimfw >/dev/null 2>&1 && echo "üõ†Ô∏è Updating ZimFW..." && run_update zimfw update
    command -v oh-my-posh >/dev/null 2>&1 && echo "üõ†Ô∏è Updating Oh My Posh..." && run_update sudo oh-my-posh update
    
    echo "üéâ System update complete!"
}

