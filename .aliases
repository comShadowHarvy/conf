# Function to navigate to a directory and then open yazi
cdz() {
    if [ -z "$1" ]; then
        yazi .
    else
        cd "$1" && yazi .
    fi
}

# Function to open yazi in a directory, and cd to that directory when exiting yazi
function ycd() {
    tmp="$(mktemp -t "yazi-cwd.XXXXX")"
    yazi --cwd-file="$tmp" "$@"
    if cwd="$(cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
        cd -- "$cwd"
    fi
    rm -f -- "$tmp"
}

