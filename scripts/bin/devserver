    echo -e "   ${C_CYAN}ğŸ˜ php${C_RESET}      - PHP built-in development server"
    echo -e "   ${C_CYAN}ğŸ’ ruby${C_RESET}     - Ruby WEBrick or Rails server"
    echo -e "   ${C_CYAN}ğŸ”· go${C_RESET}       - Go HTTP server applications"
    
    echo ""
    echo -e "${C_YELLOW}Auto-Detection Files:${C_RESET}"
    echo -e "   ${C_WHITE}package.json${C_RESET}     â†’ Node.js project"
    echo -e "   ${C_WHITE}requirements.txt${C_RESET} â†’ Python project"
    echo -e "   ${C_WHITE}manage.py${C_RESET}        â†’ Django project"
    echo -e "   ${C_WHITE}composer.json${C_RESET}    â†’ PHP project"
    echo -e "   ${C_WHITE}Gemfile${C_RESET}          â†’ Ruby project"
