.idea/
*.swp
*.swo

# Testing
.tox/
.coverage
.pytest_cache/
htmlcov/

# Jupyter Notebook
.ipynb_checkpoints

# pyenv
.python-version

# pipenv
Pipfile.lock

# Database
*.db
*.sqlite3
EOF
            ;;
        "node")
            cat > .gitignore <<'EOF'
# Dependencies
node_modules/
npm-debug.log*
